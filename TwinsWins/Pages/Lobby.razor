@page "/lobby"

<PageTitle>Weather forecast</PageTitle>

@using Microsoft.AspNetCore.SignalR.Client
@using TwinsWins.Data
@inject NavigationManager Navigation

<button class="btn btn-primary" @onclick="StartNewGame">New Game</button>

@if (games == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Player ID</th>
                <th>Stake</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in games)
            {
                <tr>
                    <td>@game.OwnerId</td>
                    <td>@game.Stake</td>
                    <td>@game.Created.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Game>? games;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        games = new List<Game>(); 
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/signalrhub"))
            .Build();

        hubConnection.On<Game>("ReceiveNewGame", (newGame) =>
        {
            games.Add(newGame);
            InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
    }

    private async Task StartNewGame()
    {
        if (hubConnection != null)
        {
            await hubConnection.SendAsync("NewGame");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection != null)
        {
            await hubConnection.DisposeAsync();
        }
    }
   }
